@model List<ResultProductDto.Data>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="container">
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Ürün Adı</th>
            <th>Ürün Fiyat</th>
            <th>Ürün Stok</th>
            <th>Ürün Açıklaması</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            count++;

            <tr>
                <td>@count</td>
                <td>@item.ProductName</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
                <td>@item.Description</td>
                <td><a class="btn btn-warning" href="/Product/DeleteProduct/@item.ProductId">Sil</a></td>
                <td><a class="btn btn-success" href="/Product/UpdateProduct/@item.ProductId">Güncelle</a></td>
            </tr>
        }
    </table>
    <a class="btn btn-primary" href="/Product/CreateProduct/">Ekle</a>
</div>

